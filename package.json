{
  "name": "figma-palette",
  "version": "1.0.0",
  "description": "Generate colors",
  "license": "ISC",
  "scripts": {
    "build": "webpack --mode=production",
    "build:watch": "concurrently \"webpack --mode=development --watch\" \"pnpm dlx tailwindcss -i ./src/app/tailwind.css -o ./src/app/index.css --watch\"",
    "prettier:format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json}' "
  },
  "dependencies": {
    "colorjs.io": "^0.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.70.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "react-dev-utils": "^12.0.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.4.4",
    "typescript": "^4.9.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.1",
    "webpack-cli": "^4.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
